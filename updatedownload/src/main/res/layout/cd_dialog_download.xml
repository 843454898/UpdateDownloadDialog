<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/cd_update"

         >


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:text="发现新版本!"
             android:textSize="20sp"
             android:textStyle="bold"
             android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
             />
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="v3.2.0"
            android:padding="3dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/cd_update_ffffff_5dp">
        <TextView
            android:id="@+id/tv_update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多处功能优化，体验更流畅，服务更稳定，马上更新吧！"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:id="@+id/ll_gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="match_parent"

                android:layout_height="40dp"
                android:background="@drawable/cd_update_00aff_5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:text="立即更新"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ffffff" />
            <TextView
                android:id="@+id/iv_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="暂不更新"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textSize="20sp"
                android:textColor="#A5A5A5"
                />
            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#A5A5A5"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"

                />
        </LinearLayout>
        <com.gtdev5.geetolsdk.mylibrary.widget.NumberProgressBar
            android:id="@+id/number_progressBar"
            style="@style/UpdateAppNumberProgressBar_Red"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />
    </LinearLayout>



    <ImageView
        android:id="@+id/iv_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gt_bg_update"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>



    <com.gtdev5.geetolsdk.mylibrary.widget.PressedTextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#aaaaaa"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"/>
</LinearLayout>
