<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="63dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:src="@mipmap/qy_dialog_download"
            android:id="@+id/iv_dg_download"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更新内容:"
            android:textColor="#343434"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_dg_download"
            android:paddingHorizontal="17dp"
            android:background="@color/white"
            android:lineSpacingExtra="10dp"
            android:id="@+id/tv_dg_download_update_pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="115dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="15dp"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="升级新版本"
            android:id="@+id/tv_dg_download_update_version_pt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_dg_download_update_version_pt"
            android:layout_marginEnd="15dp"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="最新版本：3.0.2"
            android:id="@+id/tv_version"
            />
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_dg_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:paddingHorizontal="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dg_download_update_pt"
            >
            <TextView
                android:id="@+id/tv_update_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                tools:text="测试"
                android:minLines="3"
                android:textColor="#343434"
                android:lineSpacingExtra="10dp"/>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/nsv_dg_download"
            android:background="@drawable/qy_download_bottom_rd_white_12"
            >
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/qy_download_no"
                android:text="暂不更新"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_update"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:background="@drawable/qy_download_yes"
                android:text="立即更新"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_progressbar"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/nsv_dg_download"
            android:background="@drawable/qy_download_bottom_rd_white_12"
            android:visibility="gone">
            <com.gtdev5.geetolsdk.mylibrary.widget.NumberProgressBar
                android:id="@+id/number_progressBar"
                style="@style/UpdateAppNumberProgressBar_Red"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>